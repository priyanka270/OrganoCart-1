pipeline {
    agent any
    tools {
        maven 'maven'
        jdk 'java'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }
        
        stage ('Compile') {
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true -f OrganoCart/pom.xml clean compile' 
            }
        }
        
        stage ('Test') {
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true  -f OrganoCart/pom.xml clean test' 
            }
        }
        
        stage ('Build') {
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true  -f OrganoCart/pom.xml install' 
            }
        }
        
        stage ('Post Review to ReviewBoard') {
            steps {
                sh 'git checkout development'
                sh 'cd /root/OrganoCart/OrganoCart/ && rbt post' 
            }
        }

        stage ('Deploy to DEV') {
            steps {
                
                sh 'docker -H :1234 stop organocart-prod || true'
                sh 'docker -H :1234 rm organocart-prod || true'
                sh 'docker -H :1234 run -d -it --name organocart-prod -p 9005:8080 -v $(pwd)/OrganoCart/target/OrganoCart.war:/usr/local/tomcat/webapps/organocart.war tomcat'
                sh 'docker -H :1234 ps -a | grep "organocart-prod"'

            }
        }
    }
}
