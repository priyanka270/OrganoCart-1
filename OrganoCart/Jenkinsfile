pipeline {
    agent any
    tools {
        maven 'maven'
        jdk 'java'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }
        
        stage ('Compile') {
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true -f OrganoCart/pom.xml clean compile' 
            }
        }
        
        stage ('Test') {
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true  -f OrganoCart/pom.xml clean test' 
            }
        }
        
        stage ('Build') {
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true  -f OrganoCart/pom.xml install' 
            }
        }
        stage ('Build Docker Image') {
            steps {
                sh 'docker -H :1234 build -f OrganoCart/dockerfile -t santoshkatageri/organocart-blue .'  
            }
        }
        
        stage ('Push Image to DockerHub') {
            steps {
                sh 'docker -H :1234 login -u santoshkatageri  -p S$s8880608429 https://hub.docker.com/' 
                sh 'docker -H :1234 tag organocart-blue santoshkatageri/organocart-blue:latest'
                sh 'docker -H :1234 push santoshkatageri/organocart-blue:latest'
                
            }
        }
        stage ('Deploy to Blue ENV') {
            steps {
                
                sh 'docker -H :1234 stop organocar-blue || true'
                sh 'docker -H :1234 rm organocart-blue || true'
                sh 'docker -H :1234 run -d --name organocart-blue -p 8081:8080 santoshkatageri/organocart-blue:latest'
            }
        }
    }
}
